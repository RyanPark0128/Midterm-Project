<!DOCTYPE html>
<head>
  <html lang="en">
  <title>Home Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/userPoll.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/routes/userPoll.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


  <script>
    $( function() {
      $( ".sortable" ).sortable();
      $( ".sortable" ).disableSelection();
    } );
  </script>
  <script>
    $(document).ready(() => {
      $(".sortable").empty();
      for (i=1; i < 50; i++) {
        let $option = $('<li>').addClass("ui-state-default").text(i);
        $('.sortable').prepend($option);
      }
    })
    window.onscroll = function() {scrollFunction()};
    function scrollFunction() {
      if (document.body.scrollTop > 700 || document.documentElement.scrollTop > 700) {
        document.getElementById("myBtn").style.display = "block";
      } else {
        document.getElementById("myBtn").style.display = "none";
      }
    }

function topFunction() {
  document.documentElement.scrollTop = 0;
}
  </script>
</head>
  <body>
    <nav class="header">
      <h1>iWant</h1>
      <div>
        <input type="submit" value="Create New Poll">
      </div>
    </nav>
    
    <main>
      <section>
        <h1>Title of Survey</h1>
        <h3>Drag and drop your Options to Rank from Best to Worst
        <br></br>
          <form id = form method="POST" action="/userPoll ">
            <ul class="sortable">
              <li class="ui-state-default">Item 1</li>
              <li class="ui-state-default">Item 2</li>
              <li class="ui-state-default">Item 3</li>
              <li class="ui-state-default">Item 4</li>
              <li class="ui-state-default">Item 5</li>
              <li class="ui-state-default">Item 6</li>
              <li class="ui-state-default">Item 7</li>
            </ul>

            <button id="but">Submit</button>

            <br></br>

          </form>
        </h3>
      </section>
    </main>
    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
  </body>
</html>

